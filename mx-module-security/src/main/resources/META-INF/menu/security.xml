<?xml version="1.0" encoding="UTF-8"?>
<properties>

    <!--菜单配置
            name:标识
            icon:图标
            value:页面显示文字
            id:每个不同,用于区分上下级关系
            url:跳转的路径
            pid:上一级id
            permissions:权限 为空则没有权限
     -->

    <!-- 配置所有的一级导航 -->
    <category name="default">
        <property name="security" icon="mdi-security" value="安全管理" id="security" url="" pid="0" permissions="SECURITY"/>
    </category>

    <category name="security">
        <property name="security_admin" path="security/administrator" icon="" value="管理员列表" id="security_admin" url="/mx/security/administrator/list.html" pid="security" permissions="SECURITY_ADMIN_LIST"/>
        <property name="security_role" path="" icon="" value="角色管理" id="security_role" url="/mx/security/role/list.html" pid="security" permissions="SECURITY_ROLE_LIST"/>
        <property name="security_log" path="" icon="" value="操作日志" id="security_log" url="/mx/security/log/operation_log.html" pid="security" permissions="SECURITY_ADMIN_LOG_LIST"/>
        <property name="security_setting" path="" icon="" value="安全设置" id="security_setting" url="/mx/security/setting/setting.html" pid="security" permissions="SECURITY_SETTING_DETAIL"/>
    </category>
</properties>